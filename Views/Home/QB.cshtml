                                    <ul>
                                        <li class="tag__item play blue">
                                            <a href="@Url.Content(o.Q_Pdf)" class="btn btn-success"> Read  Book </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                </div>


            </div>
        </div>

        </div>

    </section>
    <div class="btn-box">
        <a href="@Url.Action("userd","Home")">
