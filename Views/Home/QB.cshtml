@model MacLibraryProject.Models.QModel
@{
    ViewBag.Title = "QB";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <link href="~/fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
    <link href="~/fonts.googleapis.com/css?family=Raleway:400,500,600,700" rel="stylesheet">
    <link href="~/fonts/fontawesome-webfont.eot" rel="stylesheet">
    <link href="~/fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
    <link href="~/fonts.googleapis.com/css?family=Raleway:400,500,600,700" rel="stylesheet">
    <link href="~/fonts/fontawesome-webfont.eot" rel="stylesheet">
    @*<link href="~/Content/User/css/audio.css" rel="stylesheet" />*@


    <style>
        .card-container {
            background-image: url('https://images7.alphacoders.com/132/1326369.png');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            padding: 50px 0; /* Add padding to adjust spacing */
            /*height: 100vh;*/ /* Cover the entire viewport height */
        }

        .card {
            border-radius: 15px;
            border: 2px solid white;
            background-color: black;
            overflow: hidden;
        }

            .card:hover {
                transform: scale(1.05);
                transition: transform 0.3s ease-in-out;
            }

        .card-body {
            padding: 15px;
        }

        .h5 a {
            color: white;
            text-decoration: none;
        }

            .h5 a:hover {
                text-decoration: underline;
            }

        .mb-0 {
            color: white;
            font-weight: bold;
            font-family: serif;
            margin-bottom: 0;
        }

        audio {
            width: 100%;
        }


        .btn {
            margin: 10px;
            padding: 15px 30px;
            font-size: 18px;
            border: none;
            border-radius: 5px;
            background-color: #dc3545; /* Button color */
            color: white;
            text-decoration: none;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

            .btn:hover {
                background-color: #c82333; /* Darker color on hover */
                transform: scale(1.05); /* Slight scaling on hover */
            }
    </style>


</head>
<body>
    <!-- inner page section -->
    <!-- end inner page section -->
    <section class="product_section layout_padding">
        <div class="card-container">

            @*<div class="container">
