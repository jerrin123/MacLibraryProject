                    <a href="@Url.Action("DbookB","Home")" class="btn btn-danger"> JOURNALS </a>




                </div>*@
            <div>
                <br />



            </div>

            <div class="row " style="margin-right:20px;">

                <div class="row">
                    @foreach (var o in Model.Qid)
                    {
                        <div class="col-md-3 mb-4">
                            <div class="card text-light bg-dark">
                                <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
                                    <img class="card-img-top" src="https://c1.wallpaperflare.com/preview/993/185/255/headphones-small-book-relax.jpg"
                                         alt="Card image cap">
                                    <a href="#!">
                                        <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                                    </a>
                                </div>
                                <div class="card-body text-center">
                                    <h5 class="h5 font-weight-bold"><a href="#" target="_blank" style="font-family: serif; font-weight: bold;">@o.title</a></h5>
                                    <p class="mb-0" style="font-family: serif; font-weight: bold; color: white;">@o.Semester</p>

                                    <p class="mb-0" style="font-family: serif; font-weight: bold; color: white;">@o.Subject</p>
