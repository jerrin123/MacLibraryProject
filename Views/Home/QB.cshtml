@model MacLibraryProject.Models.QModel
@{
    ViewBag.Title = "QB";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <style>
        .custom-card {
            max-width: 540px;
            border-radius: 15px; /* Adding curved edges */
            overflow: hidden; /* To clip content inside rounded corners */
            margin: 20px; /* Add some margin for spacing */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Adding a subtle shadow */
        }

        .custom-img {
            border-radius: 15px 0 0 15px; /* Rounded left corner for image */
            width: 100%; /* Make the image cover the column */
            height: 100%; /* Make the image cover the column */
            object-fit: cover; /* Maintain aspect ratio and cover content */
        }

        .custom-card-content {
            padding: 15px;
        }

        .read-button {
            display: inline-block;
            padding: 10px 15px;
            border: 2px solid transparent; /* Initial transparent border */
            border-radius: 5px;
            background-color: #007bff;
            color: white;
            text-decoration: none;
            transition: border-color 0.3s ease-in-out; /* Transition effect for border color */
        }

            .read-button:hover {
                border-color: white; /* Border color on hover */
            }

        .card-container {
/*            background-image: url('https://images7.alphacoders.com/132/1326369.png');
*/            background-size: cover;
              background-color:black;
            background-repeat: no-repeat;
            /*            background-attachment: fixed;
*/ padding: 50px 0; /* Add padding to adjust spacing */
            /*height: 100vh;*/ /* Cover the entire viewport height */
        }

    </style>
</head>
<body>

    <div class="btn-box">

        <a href="@Url.Action("userd","Home")">
            Back to Prevoius
        </a>
    </div>

    <section class="product_section layout_padding">
        <div class="card-container">



           

            <div class="row " style="margin-right:20px;">
                <div class="main">
                    <ul class="cards">
                        @foreach (var o in Model.Qid)
                        {
                            <center>
                                <div class="card mb-3" style="max-width: 540px;">
                                    <div class="row g-0">
                                        <div class="col-md-4">
                                            <img src="https://st4.depositphotos.com/3159197/26442/i/450/depositphotos_264427126-stock-photo-3d-stack-of-colorful-books.jpg"
                                                 alt="Trendy Pants and Shoes"
                                                 class="img-fluid rounded-start" style="height:100%; width:300px;" />
                                        </div>
                                        <div class="col-md-8">
                                            <div class="card-body">
                                                <h5 class="card-title" style="color: red; font-family: 'Juice ITC'; font-weight: bold; font-size: xx-large;">@o.Q_title</h5>
                                                <p class="card-text" style="color:black; font-family:'Agency FB'; font-weight:bold; font-size:xx-large;">
                                                    @o.year
                                                </p>
                                                <p class="card-text" style="color: blue; font-family: 'Agency FB'; font-weight: bold; font-size: xx-large; ">
                                                    @o.Subject
                                                </p>
                                                <p class="card-text" style="color: blue; font-family: 'Agency FB'; font-weight: bold; font-size: xx-large; ">
                                                    @o.Semester
                                                </p>
                                                <br />
                                                <a href="@Url.Content(o.Q_Pdf)" class="read-button">
                                                    View Question <span>&#128214;</span> <!-- Unicode for book symbol -->
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </center>
                        }
                    </ul>
                </div>


            </div>


        </div>




    </section>


    <div class="btn-box">

        <a href="@Url.Action("userd","Home")">
            Back to Prevoius
        </a>
    </div>
    @*<div class="btn-box">
            <a href="@Url.Action("userd","Home")">
                Back to Home
            </a>
        </div>*@
    </div>
    </section>
</body>
</html>








