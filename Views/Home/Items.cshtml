@model MacLibraryProject.Models.ItemModel

@{
    ViewBag.Title = "Items";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- inner page section -->
<section class="inner_page_head">
    <div class="container_fuild">
        <div class="row">
            <div class="col-md-12">
                <div class="full">
                    <h3></h3>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end inner page section -->
<section class="product_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2 style="text-align:center">
                WELCOME <span>MACFAST CATALOGUE</span>

            </h2>
            <p>Adding Video on my Webpage</p>

           
            <div>
                <img src="~/Content/User/images/header.jpg" />
            </div>
        </div>
            <br />

            <div class="container">
                @foreach (var c in Model.cat)
                {

                    <div>
                        
                            <h1>FILTER YOUR BOOKS HERE</h1>
                        
                    </div>

                    <a href="@Url.Action("Items", "Home", new {id=c.Cat_Id })" class="btn btn-outline-danger" style='margin-right:16px'> @c.Cat_Name</a>
                }
            </div>
            <br />
            <div class="row">

                @foreach (var o in Model.it)
                {
                    <div class="col">
                        <div class="card" style="width: 30rem; height:30rem;">

                            <img class="rounded" src="@Url.Content(o.item_pic)" height:"200px;" width:"200px;" />

                            <div class="card-body">
                                <h3 class="card-title">Book: @o.item_name</h3>
                                <p style="color:dimgrey" class="card-title"> Author: @o.item_author</p>
                                <p class="card-text">Book Description: @o.item_disc</p>
                                <a href="@Url.Action("AddtoWish", "Home", new { id = o.item_id })" class="option2">
                                    Wishlist
                                </a>

                                @*<a href="#" class="btn btn-success">View Status</a>*@
                            </div>
                        </div>
                        <br />
                    </div>
                   
                }


            </div>
        </div>
        <br />
    
</section>
<center>
    <div class="btn btn-success">
        <a style="transform:none;" href="@Url.Action("Index","Availables")">
            CHECK THE AVILABILTY OF THE BOOKS
        </a>
    </div>
</center>