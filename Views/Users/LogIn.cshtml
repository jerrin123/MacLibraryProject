@model MacLibraryProject.Models.User

@{
    ViewBag.Title = "LogIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("LogIn", "Users"))
{
    @Html.AntiForgeryToken()


    <!DOCTYPE html>
    <html>
    <head>
        <title>Login Page</title>
        <!-- Add any necessary CSS styles here -->
        <style>
            body {
                font-family: Arial, sans-serif;
            }

            form {
                max-width: 400px;
                margin: 0 auto;
                padding: 20px;
                border: 1px solid #ccc;
                border-radius: 5px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            }

            h4 {
                text-align: center;
            }

            .form-label {
                font-weight: bold;
            }

            .form-control {
                width: 100%;
                padding: 10px;
                margin-bottom: 10px;
                border: 1px solid #ccc;
                border-radius: 5px;
            }

            .btn {
                width: 100%;
                padding: 10px;
                border: none;
                border-radius: 5px;
                color: #fff;
                font-weight: bold;
                cursor: pointer;
            }

            .btn-danger {
                background-color: #e74c3c;
            }

            .signup-link {
                text-align: center;
                margin-top: 10px;
            }
        </style>
    </head>
<body>
    <div>
        <img src="~/Content/User/images/header.jpg">
    </div>
    <form>
        <center>
            <h4>Sign In</h4>
        </center>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Email address</label>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="User_Email">
            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1" name="User_Password">
        </div>

        <a href="@Url.Action("userd","Home")"button type="submit" class="btn btn-danger" value="Log In">Log In</a>
        
        <div>
            @Html.ActionLink("if you are not a user Signup ", "Signup")
        </div>
    </form>
    </body>
</html>
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
