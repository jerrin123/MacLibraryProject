@model IEnumerable<MacLibraryProject.Models.contact>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayoutPage1.cshtml";
}

<head>
    <style>
        .table-container {
            display: flex;
            justify-content: flex-end;
            align-items: flex-start;
        }

        .table {
            width: 100%;
            height:50%;
            border-collapse: collapse;
            display: inline-block;  
            text-align: left;
            color:black;
        
        }

            .table th,
            .table td {
                  padding: 10px;
                text-align: center;
                border-bottom: 1px solid #ddd;
                width: 100%;
               
                padding: 78px;
                border: 1px solid #ccc;
                border-radius: 3px;
                transition: border-color 0.3s;
            }

            .table th {
                background-color: #f2f2f2;
            }

            .table tr:hover {
                background-color: #f5f5f5;
            }
        .card-container {
/*            background-color:black;
*/            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            padding: 50px 0; /* Add padding to adjust spacing */
            /*height: 100vh;*/ /* Cover the entire viewport height */
        }

        .button-container {
            display: flex;
            justify-content: space-between;
            margin-top: 10px;
        }

        .button {
            background-color: #007bff;
            color: white;
            padding: 8px 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            .button:hover {
                background-color: #0056b3;
            }
    </style>

</head>
<body>
    <section class="product_section layout_padding">
        <div class="card-container">

            @*<p>
                @Html.ActionLink("Create New", "Create")
            </p>*@


            <center>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.person_name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.person_phone)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.person_email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.messages)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.person_name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.person_phone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.person_email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.messages)
                            </td>
                            <td>
                                @*@Html.ActionLink("Edit", "Edit", new { id = item.person_id }) |
        @Html.ActionLink("Details", "Details", new { id = item.person_id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.person_id })*@

                                <div class="button-container">
                                  
                                    <a href="@Url.Action("Delete", "Delete", new { id = item.person_id })" class="button">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
            </center>

            </table>
        </div>
    </section>

</body>